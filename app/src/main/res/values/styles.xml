<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomDayTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/mcv_text_date_light</item>
    </style>

    <style name="MyDatePicker" parent="@android:style/Theme.Holo.Light">
        <item name="android:textColorPrimary">@color/colorTheme</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/indigo</item>
        <item name="colorSwitchThumbNormal">@color/pink</item>
        <item name="android:colorForeground">@color/grey</item>
    </style>

    <style name="TextAppearance.MyCustomWeek" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTheme</item>
    </style>

</resources>
